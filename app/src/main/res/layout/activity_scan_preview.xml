<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/darkGrey"
    android:layout_height="match_parent"
    tools:context="com.example.gweltaz.scanticket.activity.ScanPreviewActivity">

    <!-- https://github.com/chrisbanes/PhotoView -->
    <com.example.gweltaz.scanticket.photoview.PhotoView
        android:id="@+id/scanPreview"
        android:src="@drawable/fake_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.example.gweltaz.scanticket.photoview.PhotoView>


    <android.support.v7.widget.Toolbar
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

    </android.support.v7.widget.Toolbar>

    <com.example.gweltaz.scanticket.components.PreviewMenu
        android:layout_width="match_parent"
        android:layout_marginBottom="25dp"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">


    </com.example.gweltaz.scanticket.components.PreviewMenu>

</RelativeLayout>
